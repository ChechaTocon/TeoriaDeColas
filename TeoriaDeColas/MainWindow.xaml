        <TextBox x:Name="textboxPromedioAtencion" HorizontalAlignment="Left" Height="23" Margin="78,200,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="184"/>
        <TextBox x:Name="textboxPromedioLlegada" HorizontalAlignment="Left" Height="23" Margin="78,113,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="184"/>
        <Button Content="Calcular" HorizontalAlignment="Left" Margin="128,332,0,0" VerticalAlignment="Top" Width="82" Click="Button_Click"/>
        <Label Content="Tiempo de la jornada laboral" HorizontalAlignment="Left" Margin="60,239,0,0" VerticalAlignment="Top" Height="41" Width="216" FontWeight="Bold" FontSize="14"/>
        <TextBox x:Name="textboxJornada" HorizontalAlignment="Left" Height="23" Margin="78,280,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="184"/>
        <Label x:Name="LsLabel" Content="" HorizontalAlignment="Left" Margin="427,94,0,0" VerticalAlignment="Top" Height="30" Width="473" FontWeight="Bold" FontSize="14"/>
        <Label x:Name="WsLabel" Content="" HorizontalAlignment="Left" Margin="427,123,0,0" VerticalAlignment="Top" Height="30" Width="473" FontWeight="Bold" FontSize="14"/>
        <Label x:Name="LqLabel" Content="" HorizontalAlignment="Left" Margin="427,153,0,0" VerticalAlignment="Top" Height="30" Width="473" FontWeight="Bold" FontSize="14"/>
        <Label x:Name="WqLabel" Content="" HorizontalAlignment="Left" Margin="427,183,0,0" VerticalAlignment="Top" Height="30" Width="473" FontWeight="Bold" FontSize="14"/>
        <Label x:Name="PLabel" Content="" HorizontalAlignment="Left" Margin="427,213,0,0" VerticalAlignment="Top" Height="30" Width="473" FontWeight="Bold" FontSize="14"/>
